{%- set security_suffix = '-security' if debian_stable_version == ansible_distribution_major_version or
                                       ( debian_stable_version|int -1) == ansible_distribution_major_version|int or
                                       ( debian_stable_version|int -2) == ansible_distribution_major_version|int else '/updates' %}
{#%- set security_suffix = '-security' %#}
# {{ ansible_managed | comment }}

# See https://www.debian.org/releases/stable/i386/release-notes/ch-upgrading.html
# for how to upgrade to newer versions of the distribution.
deb {{ apt_update_source_list_mirror.debian }} {{ ansible_distribution_release }} main contrib non-free
deb-src {{ apt_update_source_list_mirror.debian }} {{ ansible_distribution_release }} main contrib non-free

# # Major bug fix updates produced after the final release of the
# # distribution.

{%- if ansible_distribution_release == "bookworm" and ansible_distribution_release == "trixie" %}
# Security
deb https://security.debian.org/ {{ ansible_distribution_release }}{{security_suffix }} main contrib non-free
deb-src https://security.debian.org/ {{ ansible_distribution_release }}{{security_suffix}} main contrib non-free
{% else %}
# Security
deb https://archive.debian.org/debian-security {{ ansible_distribution_release }}{{security_suffix}} main contrib non-free
deb-src https://archive.debian.org/debian-security {{ ansible_distribution_release }}{{security_suffix}} main contrib non-free
{% endif %}


# Updates
{% if "archive.debian.org" not in apt_update_source_list_mirror.debian %}{# archive.debian for obsolete ansible_distribution_release do not have updates available #}
deb {{ apt_update_source_list_mirror.debian }} {{ ansible_distribution_release }}-updates main contrib non-free
deb-src {{ apt_update_source_list_mirror.debian }} {{ ansible_distribution_release }}-updates main contrib non-free
{% endif %}

{% if apt_debian_backports| bool %}
# backports
deb {{ apt_update_source_list_mirror.debian }} {{ ansible_distribution_release }}-backports main contrib non-free
deb-src {{ apt_update_source_list_mirror.debian }} {{ ansible_distribution_release }}-backports main contrib non-free
{% endif %}
